  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      >

      <LinearLayout
          android:id="@+id/linearlayoutmain"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="10dp"
          android:weightSum="6"
          android:background="#FFF"
          android:alpha="0.8"

          >

          <LinearLayout
          android:id="@+id/first_row"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="3"

          >

          <RadioGroup
              android:id="@+id/radiogroupprimary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <RadioButton
                  android:id="@+id/radiobutton_fees"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Fees Voucher"
                  android:checked="true"


                  />

              <RadioButton
                  android:id="@+id/radiobutton_attendacne"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Attaendance"


                  />

              <RadioButton
                  android:id="@+id/radiobutton_inventory"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Inventory"


                  />
          </RadioGroup>


          </LinearLayout>


          <LinearLayout
              android:id="@+id/second_row"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="3"
              >

              <RadioGroup
                  android:id="@+id/radiogroupsecondary"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <RadioButton
                      android:id="@+id/radiobutton_browser"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Open Browser"
                      />

                  <RadioButton
                      android:id="@+id/radiobutton_url"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Open Url"
                      />
                  <TextView
                      android:id="@+id/count_textview"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="count"
                      android:layout_gravity="right"
                      android:gravity="right"

                      />


              </RadioGroup>


